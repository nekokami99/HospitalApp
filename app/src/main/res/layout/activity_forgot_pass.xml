<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ForgotPassActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter username of your account"
        android:textStyle="bold"
        android:textSize="20dp"
        android:paddingStart="5dp"/>

    <EditText
        android:id="@+id/edt_forgotpass_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter phone number of your account"
        android:textStyle="bold"
        android:textSize="20dp"
        android:paddingStart="5dp"/>

    <EditText
        android:id="@+id/edt_forgotpass_pn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Confirm" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter new password"
        android:textStyle="bold"
        android:textSize="20dp"
        android:paddingStart="5dp"/>

    <EditText
        android:id="@+id/edt_forgotpass_newpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Repeat new password"
        android:textStyle="bold"
        android:textSize="20dp"
        android:paddingStart="5dp"/>

    <EditText
        android:id="@+id/edt_forgotpass_repeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="Confirm change" />
</LinearLayout>